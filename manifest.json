{
  "name": "Infinite Campus Grade Predictor",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Predict future grades based on what you think you'll get on your next assignment",
  "homepage_url": "http://github.com/benman604",
  "icons": {
    "16": "icons/icon16.png",
    "120": "icons/icon120.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon120.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "https://*.infinitecampus.org/*", "tabs", "webNavigation", "contextMenus", "tabs", "storage"
  ],
  "background": {
    "scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.infinitecampus.org/*"
      ],
      "js": [
        "src/inject.js"
      ],
      "all_frames":true
    }
  ]
}